<h1>TasksController#index</h1>
<p>Find me in app/views/tasks_controller/index.html.erb</p>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <h2><%= link_to task.name, task_path(task) %></h2>
    <h3><%= link_to task.content, task_path(content) %></h3>
    <%= link_to "Edit task", edit_task_path(task) %>
    <%= link_to "Delete task", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<b><%= link_to "Add a new task", new_task_path %></b>